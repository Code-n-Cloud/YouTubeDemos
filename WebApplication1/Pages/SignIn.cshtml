@page
@model WebApplication1.Pages.SignInModel
@{

<div class="signin-container">
    <div class="signin-form">
        <h2>Sign In</h2>
        @if (string.IsNullOrEmpty(Model.SuccessMessage)==false)
            {
                <div class="alert alert-success d-flex align-items-center" role="alert">
                    <i class="fas fa-check-circle me-2"></i>
                    <div>
                        <strong>Successfully signed in!</strong> Welcome back
                    </div>
                    <button type="button" class="btn-close ms-auto" data-bs-dismiss="alert"></button>
                </div>
            }
            else if (string.IsNullOrEmpty(Model.ErrorMessage) == false)
            {
            <div class="alert alert-danger d-flex align-items-center" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>
                <div>
                    <strong>You are not signed in.</strong> Please sign in to access all features.
                </div>
                <a href="/signin" class="btn btn-outline-danger btn-sm ms-3">Sign In</a>
            </div>
            }
        <form method="post">
            <div class="form-group">
                    <label asp-for="UserSignInModel.EmailAddress" class="form-label">Email</label>
                    <input asp-for="UserSignInModel.EmailAddress" class="form-control" autocomplete="username" />
                    <span asp-validation-for="UserSignInModel.EmailAddress" class="text-danger"></span>
            </div>

            <div class="form-group">
                    <label asp-for="UserSignInModel.Password" class="form-label">Password</label>
                    <input asp-for="UserSignInModel.Password" class="form-control" autocomplete="current-password" />
                    <span asp-validation-for="UserSignInModel.Password" class="text-danger"></span>
            </div>

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <button type="submit" class="btn btn-primary w-100">Sign In</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
}
